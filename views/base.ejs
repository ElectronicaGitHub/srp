	<%- partial('particials/footer') %>

	<message></message>

	<style>
	button:focus {
		outline : none !important;
	}
	.bg {
		position: fixed;
		top: 0;
		left: 0;
		z-index: -1;
		width: 100%;
		height: 100%;
		background-position: center;
		background-size: cover;
		background-image: url('/assets/bgmap.jpg');
	}
	.bg-fader {
		position: fixed;
		top: 0;
		left: 0;
		z-index: -1;
		width: 100%;
		height: 100%;
		background: #ddd;
		opacity: 0.3;
	}
	html, body {
		height: 100%;
		width: 100%;
		-webkit-font-smoothing: antialiased;
	}
	*[ng-click] {
		cursor: pointer;
	}
	*:focus {
		outline: none;
	}
	</style>

