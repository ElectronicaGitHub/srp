<%- layout('base.ejs')%>
<% block('title', 'Админка') -%>

<script src="/libs/angular/angular.min.js"></script>
<script src="/libs/textAngular/dist/textAngular-rangy.min.js"></script>
<script src="/libs/textAngular/dist/textAngular-sanitize.js"></script>
<script src="/libs/textAngular/dist/textAngular.min.js"></script>
<script src="/javascripts/admin_post.js"></script>

<script>
	window.post = <%- JSON.stringify(post) %>;
</script>

<link rel="stylesheet" href="/stylesheets/builded/admin.css">
<link rel="stylesheet" href="/libs/textAngular/dist/textAngular.css">

<div ng-app="serpAdmin" ng-controller="MainCtrl" class="admin-container">

	<div class="container"><a href="/admin">Вернуться назад</a></div>
	
	<div class="full">
		<div class="block">
			<div class="title">Основная информация</div>
			
			<div class="wrapper">
				<div class="form-group">
					<label for="title">Заголовок</label>
					<input class="form-control" type="text" ng-model="post.title">
				</div>

				<div class="form-group">
					<label for="title">Заголовок URL</label>
					<input class="form-control" type="text" ng-model="post.title_url">
				</div>
				
				<div class="form-group">
					<label for="title">Мини текст поста</label>
					<input class="form-control" type="text" ng-model="post.description_mini">
				</div>
	
				<div class="form-group">
					<label for="title">Текст поста</label>
					<div text-angular ng-model="post.description"></div>
				</div>
			</div>
		</div>
	</div>

	<div class="bottom">
		<% if (post) { %>
			<button class="btn btn-success" ng-click="updatePost(post)">Редактировать</button>
		<%} else { %>
			<button class="btn btn-success" ng-click="savePost(post)">Сохранить</button>
		<%} %>
	</div>


</div>
