<%- layout('base.ejs')%>
<% block('title', 'Админка') -%>

<script src="/libs/angular/angular.min.js"></script>
<script src="/javascripts/admin.js"></script>
<link rel="stylesheet" href="/stylesheets/builded/admin.css">

<div ng-app="serpAdmin" ng-controller="MainCtrl" class="admin-container">
	<div class="left">
		
		<div class="form-group">
			<label for="title">Заголовок</label>
			<input class="form-control" id="title" ng-class="{ fill : restplace.title }" type="text" ng-model="restplace.title">
		</div>

		<div class="form-group">
			<label for="description_full">Полное описание</label>
			<textarea class="form-control" id="description_full" ng-class="{ fill : restplace.description_full }" ng-model="restplace.description_full" placeholder="Описание полное"></textarea>
		</div>

		<div class="form-group">
			<label for="description_mini">Краткое описание</label>
			<textarea class="form-control" id="description_mini" ng-class="{ fill : restplace.description_mini }" ng-model="restplace.description_mini" placeholder="Описание мини"></textarea>
		</div>

		<h1>Карта</h1>
		<div class="form-group">
			<label>Координаты</label>
			<input class="form-control" ng-class="{ fill : restplace.coordinates }" type="text" ng-model="restplace.coordinates" placeholder="Координаты">
			<input class="form-control" ng-class="{ fill : restplace.adress }" type="text" ng-model="restplace.adress" placeholder="Адрес">
		</div>

	</div>
	<div class="right">
		<h1>Файлы</h1>
		<p>
			<input id="image" type="file" multiple="true" style="visibility:hidden">
			<button class="btn btn-success" ng-click="imageLoad()">Загрузить фотки</button>
		</p>
		<div class="images-list">
			<div style="background-image:url('{{ image.path }}')" class="each-img" ng-repeat="image in imageList">
			</div>
		</div>
	</div>
	<div class="bottom">
		<div id="map" style="width: 100%; height: 500px"></div>
		<button class="btn btn-success" ng-click="saveRestPlace(restplace)">Сохранить</button>
	</div>


</div>
