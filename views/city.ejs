<%- layout('base.ejs')%>
<% block('title', 'Серпантин | ' + city.seo_title) -%>
<% block('description', city.seo_description) -%>
<% block('meta', partial('particials/city_meta')) %>

<script src="/javascripts/city.js"></script>
<script src="/custom/owl.carousel.min.js"></script>

<script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>

<script>
	window.places = <%- JSON.stringify(places) %>;
</script>

<link rel="stylesheet" href="/stylesheets/builded/city.css">
<link rel="stylesheet" href="/custom/owl.carousel.css">

<div class="header" style="background-image:url('<%= city.image.path %>')">
	<p class="title"><%= city.name %></p>
</div>

<div class="filters-content container">
	<div class="content">
		<div class="part-wrapper carousel hotels-slider">
	 		<% for (var i in hotels) { var hotel = hotels[i]; %>
				<div class="cell-wrapper">
					<a href="/hotel/<%= hotel.title_url %>">

						<!--  -->
							
						<div class="cell block-wrapper item">
							<div class="images-with-radio-wrapper">
								<div class="images-wrapper">
									<div data-n="<%= i %>" class="card-image <%= i == 0 ? 'current' : '' %>" style="background-image: url('<%= hotel.images[0].path_low %>')"></div>
								</div>
							</div>

							<!-- <div class="block" style="background-image: url('<%= hotel.images[0].path_low %>');" > -->
							
							<div class="card-info">
								<span class="left">
									<p class="title"><%= hotel.title %></p>
									<p class="city"><span class="fa fa-map-marker icon"></span><%= hotel.city.name %></p>
								</span>
								<span class="right">
									<button class="more-info">Подробнее</button>
								</span>
								
								<div class="price-wrapper">
									<div class="price-with-icon">
										<span class="fa fa-rub icon"></span>
										<span class="price"><%= hotel.price[0] %></span>	
									</div>
									<div class="per-x">за сутки</div>
								</div>
							</div>
						</div>
						<!--  -->


						<!-- <div class="block-wrapper item">
							<div style="background-image: url('<%= hotel.images[0].path_low %>');" class="block">
								<div class="info-bottom">
									<p class="title"><%= hotel.title %></p>
								</div>
							</div>
						</div> -->
					</a>
				</div>
			<% } %>
		</div>

		<% for (var i = 0, ii = places.length; i < ii; i++) { var place = places[i]; %>
			<a href="/place/<%= place.title_url %>" target="_blank">
				<div class="block-wrapper single js-init-place col-xs-12 col-sm-4 col-md-3 col-lg-3" data-id="<%= place._id %>">
					<div style="background-image: url('<%= place.images[0].path_low %>');" class="block">
						<div class="fader">
							<span class="info">
								<p class="title"><%= place.title %></p> 
								<p class="tip"><%= place.type == 'restaurant' ? 'Покушать' : 'Посетить' %></p> 
							</span>
						</div>
					</div>
				</div>
			</a>
		<% } %>
	</div>
</div>